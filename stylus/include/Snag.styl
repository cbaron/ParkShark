.Snag
    display: block !important
    height: 100%
    transition: opacity .1s ease-in-out

    &.hidden
        background-color: #f6f4f3
        opacity: .25 !important

    .map-wrap
        height: 85%

        .map
            height: 100%
            
            svg
                height: 20px
                width: 20px
                stroke: black
                fill: black

        .menu
            position: absolute
            top: .5rem
            right: .5rem
            background-color: #fbf7f2
            border-radius: .5rem
            box-shadow: 1px 1px 5px #ddd, -1px -1px 5px #ddd
            
            .menu-item
                &:first-child
                    border-bottom: 1px solid #ddd
                >div
                    padding: .75rem .75rem .375rem
                    
            svg.info
                height: 1.4rem
                width: 1.4rem
                fill: #6cb2fc
                
            svg.cursor
                height: 1.2rem  
                width: 1.2rem
                fill: #6cb2fc




    .info-main
        background-color: #f6f4f3
        border-top: 1px solid transparent
        border-radius: .5rem
        padding: 0 1rem 1rem
        position: relative
        width: 100%
            
        .page-ui
            left: 0
            margin-left: auto
            margin-right: auto
            position: absolute
            top: -2.25rem
            right: 0
            text-align: center
            
            svg.dot
                height: 1rem
                fill: white
                margin: 0 .25rem

                &.selected
                    fill: #007aff


        .weather
            position: absolute
            right: .5rem
            top: -3rem
            background-color: #fbf7f2
            padding: .075rem .175rem .075rem 1.9rem
            
            span:first-child
                position: relative
            
                svg.cloud
                    height: 1.4rem
                    width: 1.4rem
                    position: absolute
                    right: 3px
            
            span:last-child
                font-size: 1.2rem
                line-height: 1.3
                
        .line-wrap
            height: 20px
            text-align: center

            svg.line
                height: 20px
                width: 40px
                
                line
                    stroke: #bbb//#c5c4c2
        
        .snag-area
            text-align: center
                         
            .button-row
                .snag
                    padding: .5rem 2rem
                    background-color: #007aff
                    color: #fff
                    font-weight: bold
                    border-radius: .5rem
                    box-shadow: none
                    
                    >div
                        &:first-child
                            font-size: .9rem
                            margin-bottom: .1rem
                            
                        &:last-child
                            font-weight: normal
                    
        .spot-details
            margin-top: 2rem
            
            >div:first-child
                font-size: 1.5rem
                font-weight: bold
            
            svg.dot
                height: 3px
                margin: 0 3px 3px 3px
                
            img
                width: 100%
                margin-top: 1rem

    svg
        height: 10px
        width: 10px
        stroke: black
        fill: black
